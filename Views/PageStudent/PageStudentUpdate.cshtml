<div class="modal fade" id="modalStudentUpdate" data-bs-keyboard="false" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Student</h5>
        <button type="button" id="modalStudentUpdateClose" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body studentUpdate d-flex justify-content-center">
       <div>
            <div class="cardInfo" style="width: 25rem;">
            <h4><div class="info-title" id="info-title">
            </div></h4>
            <strong><div class="info-Stocks"></div></strong>
            <hr/>
            <form id="updateStudentForm">
            <div class="form-group">
                <label name="" class="control-label">First Name</label>
                <input type="text" name="StudentFname" id="inputFName" class="form-control" placeholder="First name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Middle Name (Optional)</label>
                <input type="text" name="StudentMname" id="inputMName" class="form-control" placeholder="Middle name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Last Name</label>
                <input type="text" name="StudentLname" id="inputLName" class="form-control" placeholder="Last name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">School ID</label>
                <input type="text" name="SchoolId" id="inputSchoolID" class="form-control" placeholder="School ID" required/>
            </div>
            </form>
            <hr/>
      </div>
       </div>
      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>!-->
        <button type="button" class="btn btn-primary updateStudent" id="updateStudent">Confirm</button>
      </div>
    </div>
  </div>
</div>