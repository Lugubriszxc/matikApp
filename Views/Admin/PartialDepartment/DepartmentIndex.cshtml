  function proceedUpdate(arrData)
  {
    //AJAX UPDATE DEPARTMENT
          $.ajax
          ({
            url: "../api/adminapi/updateDepartment",
            type: "POST",
            data:
            {
                dep : arrData,
            },
            })
            .done(function()
            {
              $("#updateDepartmentForm")[0].reset();
              $("#modalDepartmentUpdate").modal("toggle");
              displayDepartmentData();
              displaySavedProgress();
          });
  }

