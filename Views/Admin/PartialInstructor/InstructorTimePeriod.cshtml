<template id="timeOptionTemplate">
  <option value=""></option>
</template>

<div class="modal fade" id="modalTimePeriodCreate" data-bs-keyboard="false" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-warning text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Unavailable Period</h5>
        <button type="button" id="modalTimePeriodCreateClose" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body timePeriodCreate d-flex justify-content-center">
       <div>
            <div class="cardInfo" style="width: 25rem;">
            <h4><div class="info-title" id="info-title">
            </div></h4>
            <strong><div class="info-Stocks"></div></strong>
            <hr/>
            <form id="createTimePeriodForm">
                @* <label name="" class="control-label">Unavailable Period</label> *@
                <div class="form-group">
                <label name="" class="control-label">Select Day</label>
                <select id="daySelect" name="Day" class="form-select">
                <option value="Sunday">Sunday</option>
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday">Saturday</option>
                </select>
              </div>
              <div class="form-group">
                <label name="" class="control-label">Time Period</label>
                <select id="periodSelect" name="TimeId" class="form-select"></select>
              </div>
            </form>
            <hr/>
      </div>
       </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary mods" id="createTimePeriod">Add</button>
      </div>
    </div>
  </div>
</div>