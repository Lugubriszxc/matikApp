<div class="modal fade" id="modalInstructorCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content bg-warning text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Assign Instructor</h5>
        <button type="button" id="modalInstructorCreateClose" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body instructorCreate d-flex justify-content-center">
       <div>
            <div class="cardInfo" style="width: 25rem;">
            <h4><div class="info-title" id="info-title">
            </div></h4>
            <strong><div class="info-Stocks"></div></strong>
            <hr/>
            <form id="createInstructorForm">
            <div class="form-group">
                <label name="" class="control-label">First Name</label>
                <input type="text" name="InstructorFname" id="inputFName" class="form-control" placeholder="First name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Middle Name (Optional)</label>
                <input type="text" name="InstructorMname" id="inputMName" class="form-control" placeholder="Middle name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Last Name</label>
                <input type="text" name="InstructorLname" id="inputLName" class="form-control" placeholder="Last name" required/>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Department</label>
                <select id="departmentSelect" name="DepartmentId" class="form-select"></select>
            </div>
            <hr/>
            <div class="form-group">
              <label name="" class="control-label">Unavailable Period</label>
              <select id="periodSelect" name="TimeId" class="form-select"></select>
            </div>
            </form>
            <hr/>
      </div>
       </div>
      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>!-->
        <button type="button" class="btn btn-primary" id="createInstructor">Confirm</button>
      </div>
    </div>
  </div>
</div>