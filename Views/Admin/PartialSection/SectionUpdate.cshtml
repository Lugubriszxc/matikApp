              <option value="2nd Year">2nd Year</option>
              <option value="3rd Year">3rd Year</option>
              <option value="4th Year">4th Year</option>
              </select>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Department</label>
                <select id="departmentSelectUpdate" name="DepartmentId" class="form-select"></select>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Course</label>
                <select id="courseSelectUpdate" name="CourseId" class="form-select courseSelectUpdate"></select>
            </div>
            </form>
            <hr/>
      </div>
       </div>
      </div>
