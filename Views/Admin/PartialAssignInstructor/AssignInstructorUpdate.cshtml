              <input type="text" name="filterSubject" id="filterSubUpdate" class="form-control" placeholder="Filter : Input course / subject name"/>
            </div>
            <div class="form-group">
                <select id="subjectSelectUpdate" name="SubjectId" class="form-select"></select>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Semester</label>
                <select id="semesterSelectUpdate" name="Semester" class="form-select">
                <option value="1st Semester">1st Semester</option>
                <option value="2nd Semester">2nd Semester</option>
