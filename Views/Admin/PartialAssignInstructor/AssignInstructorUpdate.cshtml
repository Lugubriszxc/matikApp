    <div class="modal-content bg-warning text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Assign an instructor</h5>
        <button type="button" id="modalAssignInstructorUpdateClose" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
