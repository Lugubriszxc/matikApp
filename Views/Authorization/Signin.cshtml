<script>

	$(() => {
		if (JSON.parse(sessionStorage.getItem('userauth') !== null)) {
			window.location.href = "/Home/Index";
		}

		margin();

		$("#loginBtn").click(() => {
			var userName = $("#usernameInput").val();
			var password = $("#passwordInput").val();
			var userType = "admin";

			if (!userName || !password) {
				alertError("Input username and password first!");
			}
			else {
				//AJAX login user as admin
				$.ajax({
					url: "../api/authorizationapi/loginUser",
					type: "POST",
					data:
					{
						userName: userName,
						password: password,
						userType: userType,
					},
				}).done(function (result) {

					if (result != null) {
						console.log("Login successfully");
						if (result.userType == "admin") {
							//console.log("Open the admin's dashboard");
							sessionStorage.setItem('userauth', JSON.stringify(result));
							alertSuccess();
						}
					}
					else {
						alertError("Invalid password.");
					}
				})
			}
		})

		function margin() {
			$(".page-content").removeClass();
			$(".page-fluid").removeClass();

		}

		function alertError(message) {
			Swal.fire({
				icon: 'error',
				title: 'Error occured',
				text: message,
			})
		}

		//display success action
		function alertSuccess() {
			Swal.fire({
				icon: 'success',
				title: 'Welcome',
				showConfirmButton: false,
				timer: 1000,
				willClose: () => {
					// Add your action here
					//console.log('Timer expired, performing action...');
					// For example, redirect to another page
					window.location.href = "/Home/Index";
				}
			})
		}
	});
</script>