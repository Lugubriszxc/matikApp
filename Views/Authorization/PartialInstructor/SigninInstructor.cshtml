<script>

    $(() => {

		var storedUserAuth = sessionStorage.getItem('userauth');
        var userAuth = JSON.parse(storedUserAuth);

        if(userAuth === null)
        {
            //window.location.href = "/Authorization/SigninInstructor";
        }
        else if(userAuth.userType !== 'instructor')
        {
            if(userAuth.userType === 'admin')
            {
                window.location.href = "/Home/Index";
            }
            else if(userAuth.userType === 'student')
            {
                window.location.href = "/PageStudent/PageStudentIndex";
            }
        }

        margin();

        $("#loginBtn").click(() =>{
            var userName = $("#usernameInput").val();
            var password = $("#passwordInput").val();
			var userType = "instructor";
			
            if(!userName || !password)
            {
                alertError("Input both field first.");
            }
            else
            {
                //AJAX login user
                $.ajax({
                    url: "../api/authorizationapi/loginUser",
                    type: "POST",
                    data:
                    {
                        userName : userName,
                        password : password,
						userType : userType,
                    },
                }).done(function(result){
                    
                    if(result != null)
                    {
                        console.log("Login successfully");
                        if(result.userType == "instructor")
                        {
                            //console.log("Open the admin's dashboard");
							//var userId = result.userId;
							//sessionStorage.setItem('userId', userId);
							//console.log(sessionStorage.getItem('userId'));
							//alertError(userId);

							sessionStorage.setItem('userauth', JSON.stringify(result));
							@* console.log(JSON.parse(sessionStorage.getItem('userauth'))); *@
							alertSuccess();
                        }
                    }
					else
                    {
                        alertError("Invalid password.");
                    }
                });
            }
        })

        function margin(){
            $(".page-content").removeClass();
            $(".container-fluid.shared").removeClass();
            @* $(".bods").removeClass(); *@
        }

        function alertError(message)
        {
            Swal.fire({
                icon: 'error',
                title: 'Error occured',
                text: message,
            })
        }

		//display success action
		function alertSuccess()
		{
			Swal.fire({
				icon: 'success',
				title: 'Welcome', 
				showConfirmButton: false,
				timer: 1000,
				willClose: () => {
					// Add your action here
					//console.log('Timer expired, performing action...');
					// For example, redirect to another page
					window.location.href = "/PageInstructor/PageInstructorIndex";
				}
			})
		}

    });
</script>